<div class="slider js-slider {{#if isVertical}}slider_direction_vertical{{/if}}">
  <div class="slider__bar js-slider__bar {{#if isVertical}}slider__bar_direction_vertical{{/if}}"></div>
  {{#if isSingle}}
    <div class="slider__point js-slider__point {{#if isVertical}}slider__point_direction_vertical{{/if}}"></div>
  {{else}}
    <div class="slider__point slider__point-min js-slider__point-min {{#if isVertical}}slider__point_direction_vertical{{/if}}"></div>
    <div class="slider__point slider__point-max js-slider__point-max {{#if isVertical}}slider__point_direction_vertical{{/if}}"></div>
  {{/if}}
</div>